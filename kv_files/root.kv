<ContentNavigationLayout>:
    MDNavigationDrawerHeader:
        title:"Navigation"
        padding: ('0dp', '7dp', '0dp', '7dp')
    MDSeparator:
    MDBoxLayout:
        adaptive_height:True
        orientation:"vertical"
        padding: ('4dp', '11dp', '4dp', '8dp')
        spacing: '11dp'

        MDAnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            size_hint_y:None
            height:avatar.height

            FitImage:
                id: avatar
                source: "assets/images/favicon.png"
                size_hint: None,None
                size: '65dp','65dp'
                radius:[8]
        Widget:

        MDLabel:
            font_style:"Body1"
            text: 'Novfensec Inc.'
            color: app.theme_cls.primary_dark
            font_size:"16sp"

        Widget:

    MDSeparator:

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: "9dp"
        padding: "3dp","8dp" , 0, "12dp"

        MDWidget:

        MDLabel:
            text: "Navigation List"
            height:self.texture_size[1]
            font_size:"25sp"
            bold:True
            multiline:True

        MDWidget:
    MDSeparator:
    MDNavigationDrawerMenu:
        id:navigation_drawer_menu

        DrawerClickableItem:
            text:"Location 1"

        DrawerClickableItem:
            text:"Location 2"

        DrawerClickableItem:
            text:"Location 3"

    MDAnchorLayout:
        anchor_y: 'bottom'
        MDBoxLayout:
            adaptive_height:True
            orientation: 'vertical'
            spacing: '14dp'

            MDFillRoundFlatIconButton:
                icon:"copyright"
                text:"Novfensec Inc."
                icon_color:app.theme_cls.primary_dark
                text_color:app.theme_cls.primary_dark
                ripple_color:self.text_color
                md_bg_color:app.theme_cls.accent_light

<ContentNavigationDrawer>:
    radius: (0, 16, 16, 0)
    md_bg_color: app.theme_cls.primary_light
    width: "240dp"

    ContentNavigationLayout:
        size_hint:1,1
        orientation:"vertical"

<DrawerClickableItem@MDNavigationDrawerItem>:
    icon:"map-marker"
    focus_color:app.theme_cls.accent_light
    unfocus_color:app.theme_cls.primary_light
    text_color:"black"
    ripple_color:app.theme_cls.accent_light
    selected_color:app.theme_cls.primary_dark
