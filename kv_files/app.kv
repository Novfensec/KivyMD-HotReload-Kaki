<HomeScreen>:
    MDStackLayout:
        size_hint: 1, 1

        MDBoxLayout:
            adaptive_height:True

            MDIconButton:
                icon: "map-marker"
                theme_icon_color:"Custom"
                icon_color: app.theme_cls.primary_color
                on_press:
                    app.manager_screens.current="login screen"

<LoginScreen>:
    MDStackLayout:
        size_hint: 1, 1

        MDBoxLayout:
            adaptive_height:True

            MDIconButton:
                icon: "arrow-left"
                theme_icon_color:"Custom"
                icon_color: app.theme_cls.primary_color
                on_press:
                    app.manager_screens.current="home screen"

            MDLabel:
                text: "this is login screen"
                color:"red"
